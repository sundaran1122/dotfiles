# show-read-feeds no
auto-reload yes

bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key u show-urls
bind-key ^d delete-article
bind-key O open-all-unread-in-browser-and-mark-read

external-url-viewer "~/.scripts/newsboat/linkhandler"
browser "~/.scripts/newsboat/linkhandler %u"
macro , set browser "setsid -f firefox %u"; open-in-browser
macro t set browser "w3m %u"; open-in-browser

color listnormal default default
color listfocus default color8
color listnormal_unread color7 default underline
color listfocus_unread yellow color8 underline
color info color4 default
color article default default

highlight feedlist "--.*--" yellow default
highlight article "^(Title|Author|Date|Link|Feed):" color10 default bold
highlight article "https?://[^ ]+" color6 default underline
highlight article "\\[[1-9]+\\]" yellow default
highlight article "\\((link|image)\\)" yellow default
