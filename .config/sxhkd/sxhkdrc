# wm independent hotkeys

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + @space
	dmenu_run -nb "#2E3440" -nf "#D8DEE9" \
  -sb "#3B4252" -sf "#ECEFF3" \
  -fn "Mononokai" -p "run:" -i

# restart bspwm
super + alt + r
  bspc desktop -f 1 && bspc wm -r

# quit bspwm
super + alt + b; q
  ~/.scripts/bspwm/quitbspwm.zsh

# lock screen
super + alt + b; s
  betterlockscreen -l blur

#Window stuff

# close
super + w
	bspc node -c

# rotate windows
super + x
	bspc node @parent -R 270

super + ctrl + x
  bspc node @parent -R 90

# switch windows
super + {h,j,k,semicolon}
	bspc node -f {west,south,north,east}

# swap windows
super + m; super + {h,j,k,semicolon}
	bspc node -s {west,south,north,east} --follow

# resize window size
alt + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

alt + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# move windows
alt + super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# choose direction
ctrl + super + {h,j,k,l,c}
	bspc node -p {west,south,north,east,cancel}

# go to next and previous windows
alt + Tab
	bspc node -f next

alt + shift + Tab
	bspc node -f prev

#Desktop stuff 

#switch to desktops
alt + l
	~/.scripts/bspwm/switchtonextdesktop.zsh

alt + h
	~/.scripts/bspwm/switchtoprevdesktop.zsh

# change to all the modes

# fullscreen
super + s; super + m
	bspc node -t fullscreen && xdo hide -N Bar && xdo hide -dr

# tiling mode
super + s; super + t
	bspc node -t tiled && xdo show -N Bar && xdo show -dr

# floating mode
super + s; super + f
	bspc node -t floating

# stick and unstick windows super + s 
super + s; super + s
	bspc node -g sticky=on

super + s; super + u
	bspc node -g sticky=off
