#! /bin/sh

export EDITOR=nvim
export BROWSER=firefox
export TERMINAL=kitty

killall "picom"
killall "sxhkd"
killall "launchlemonbar"

sxhkd &
xrandr -s 1360x768
picom &
hsetroot -fill ~/wallpapers/wallpaper.png
~/.config/lemonbar/launchlemonbar
betterlockscreen -b 1 -u wallpapers/wallpaper.png &

bspc config border_width        1
bspc config window_gap          10

bspc config split_ratio          0.5
bspc config focus_follow_mouse	 true
bspc config border_width	 2.0
bspc config focused_border_color  '#88C0D0'
bspc config border_color          '#E5E9F0'
bspc config focus_follows_pointer  true
xsetroot -cursor_name left_ptr

bspc rule -a Gimp state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

#resize stuff
bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_corner
